
@{
    ViewBag.Title = "TenantIndex";
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Content/Tenant.js"></script>

<section class="section">

    <div class="row">

        <div class="col-lg-12">

            <div class="card p-3">
                <div class="row my-2 mt-1">
                    <div class="col-md-12 text-end">
                        <button onclick="AddTenant()" class="btn btn-primary btn-sm">Add Tenant</button>
                    </div>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Tenant</h5>

                    <div class="table-responsive">
                        <table id="tblTenant" class="table table-bordered table-hover">
                            <thead class="text-white bg-dark">
                                <tr>
                                    @*<td class="text-white bg-dark">ID</td>*@
                                    <td class="text-white bg-dark">Flat No.</td>
                                    <td class="text-white bg-dark"> Name</td>
                                    @*<td class="text-white bg-dark">Last Name</td>*@
                                    <td class="text-white bg-dark">Mobile No.</td>
                                    @*<td class="text-white bg-dark">Email</td>*@
                                    <td class="text-white bg-dark">Rented From</td>
                                    @*<td class="text-white bg-dark">AdharCard</td>*@
                                    <td class="text-white bg-dark">Photo</td>
                                    @*<td class="text-white bg-dark">Is Active</td>*@


                                </tr>
                            </thead>
                            <tbody> </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

<div id="AddTenantModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">

        <!-- Modal content-->
        <div class="modal-content">

            <div class="modal-body">
                <h5 class="card-title">Tenant </h5>

                <!-- Floating Labels Form -->

                <form class="row g-3">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input id="hdnId" type="hidden" />
                            <input type="text" class="form-control" id="txtFirstName" placeholder="Enter First Name" autofocus>
                            <label for="floatingFlat No">First Name</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="txtLastName" placeholder="Enter Last Name">
                            <label for="floatingFlat No">Last Name</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <select type="text" class="form-control" id="txtFlatNo"></select>
                            <label for="floatingFlat No">Flat No</label>
                        </div>
                    </div>


                    <div class="col-md-6">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="txtMobileNo" placeholder="Enter Mobile Number">
                            <label for="floatingComplaint Title">Mobile Number </label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="email" class="form-control" id="txtEmail" placeholder="Enter Email ">
                            <label for="floatingResolved By">Email</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="Date" class="form-control" id="txtRentedForm" placeholder="Enter Date ">
                            <label for="floatingResolved By">Rented Form</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="txtPermanentAddress" placeholder="Enter Address ">
                            <label for="floatingComplaint Title">Permanent Address </label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="file" class="form-control" id="txtPoliceDocumentVerification">
                            <label for="floatingResolved By">Police Doc Verification</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="file" class="form-control" id="file1">
                            <label for="floatingResolved By">Photo</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input type="file" class="form-control" id="file2">
                            <label for="floatingResolved Date">Adhar Card</label>
                        </div>
                    </div>
                  
                    <div class="col-md-">

                        <input type="checkbox" id="txtIsActive" placeholder="Resolved By">
                        <label for="floatingResolved By">Is Active</label>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary" onclick="SaveTenant()">SUBMIT</button>
                        <button type="reset" class="btn btn-warning">RESET</button>
                        <input type="button" value="CLOSE " class="btn btn-secondary" data-bs-dismiss="modal" />
                    </div>



                </form><!-- End floating Labels Form -->
            </div>
        </div>

    </div>
</div>


@*@DetailPOPUP@*@


<div id="TenantModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-body">
                <div class="container" id="DetailTenant">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">CLOSE</button>
                </div>
            </div>
        </div>
    </div>
</div>


@*AutoFocus*@
<script>
    $(document).ready(function () {
        $("#AddTenantModal").on('shown.bs.modal', function () {
            $(this).find('#txtFirstName').focus();
        });
    });
</script>
